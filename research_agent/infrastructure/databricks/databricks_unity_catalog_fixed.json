{
  "cluster_name": "unity-catalog-fixed",
  "spark_version": "13.3.x-scala2.12",
  "node_type_id": "i3.xlarge",
  "driver_node_type_id": "i3.xlarge",
  "num_workers": 2,
  "autoscale": {
    "min_workers": 1,
    "max_workers": 4
  },
  "autotermination_minutes": 60,
  "data_security_mode": "SINGLE_USER",
  "spark_conf": {
    "spark.databricks.unityCatalog.enabled": "true"
  },
  "init_scripts": [
    {
      "dbfs": {
        "destination": "dbfs:/databricks/scripts/fix_unity_catalog_hosts.sh"
      }
    }
  ],
  "custom_tags": {
    "purpose": "unity-catalog-with-hosts-fix",
    "project": "capstone"
  }
}
